<UserControl x:Class="ShoppingList2.TextInsert"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShoppingList2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Background="Gray" TextAlignment="Center">Add Item</TextBlock>
            <TextBox Name="ItemsToAdd"/>
            <Button Name="ItemAddButton" Click="OnItemAddButtonClicked" Background="LightBlue">Add</Button>
        </StackPanel>
    </Grid>
</UserControl>
